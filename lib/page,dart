 child: ListView.builder(
                    itemCount: _notes.length,
                    itemBuilder: (context, index) {
                      final notes = _notes[index];
                      return ListTile(
                        title: Text(notes.title),
                        subtitle: Column(
                          children: [
                            Text(notes.description),
                            Text(notes.category),
                            Text(notes.date),
                          ],
                        ),
                        trailing: IconButton(
                          onPressed: () => _deleteNote(notes.id),
                          icon: Icon(Icons.delete),
                        ),
                      );
                    })